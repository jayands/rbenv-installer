#!/usr/bin/env bash

# Verify Git is installed:
if [ ! $(which git) ]; then
  echo "Git is not installed, can't continue."
  exit 1
fi

#check for root
if [ "x$(whoami)" == "xroot" ]; then
    HAS_ROOT='true'
else
    HAS_ROOT='false'
fi

if [ -z "${RBENV_ROOT}" ]; then
    if [ "x$HAS_ROOT" != "xtrue" ]; then
        RBENV_ROOT="$HOME/.rbenv"
    else
        RBENV_ROOT="/opt/local/rbenv"
    fi
fi

# Install rbenv:
if [ ! -d "$RBENV_ROOT" ] ; then
  git clone https://github.com/sstephenson/rbenv.git $RBENV_ROOT
else
  cd $RBENV_ROOT
  if [ ! -d '.git' ]; then
    git init
    git remote add origin https://github.com/sstephenson/rbenv.git
  fi
  git pull origin master
fi

# Install plugins:
if [ -z "${RBENV_INSTALLER_DEFLT_PLUGNS}" ] ; then
    if [[ "x$HAS_ROOT" == "xtrue" ]]; then
        RBENV_INSTALLER_DEFLT_PLUGNS="/etc/rbenv/installer-default-plugins"
    else
        RBENV_INSTALLER_DEFLT_PLUGNS="$HOME/.rbenv-installer-default-plugins"
    fi
fi

if [ -s "$RBENV_INSTALLER_DEFLT_PLUGNS" ] ; then
    if [ ! -d "$(dirname $RBENV_ROOT)"]; then
        mkdir -p "$(dirname $RBENV_ROOT)"
    fi
  PLUGINS=$(<"$RBENV_INSTALLER_DEFLT_PLUGNS")
else
  PLUGINS=(
    sstephenson/rbenv-vars
    sstephenson/ruby-build
    sstephenson/rbenv-default-gems
    sstephenson/rbenv-gem-rehash
    fesplugas/rbenv-installer
    fesplugas/rbenv-bootstrap
    rkh/rbenv-update
    rkh/rbenv-whatis
    rkh/rbenv-use
  )
fi

for plugin in ${PLUGINS[@]} ; do

  KEY=${plugin%%/*}
  VALUE=${plugin#*/}

  RBENV_PLUGIN_ROOT="${RBENV_ROOT}/plugins/$VALUE"
  if [ ! -d "$RBENV_PLUGIN_ROOT" ] ; then
    git clone https://github.com/$KEY/$VALUE.git $RBENV_PLUGIN_ROOT
  else
    cd $RBENV_PLUGIN_ROOT
    echo "Pulling $VALUE updates."
    git pull
  fi

done

# Show help if `rbenv` is not in the path:
if [ ! $(which rbenv) ]; then
  echo "
Seems you still have not added 'rbenv' to the load path:

# ~/.bash_profile:

export RBENV_ROOT=\"$RBENV_ROOT\"

if [ -d \"\${RBENV_ROOT}\" ]; then
  export PATH=\"\${RBENV_ROOT}/bin:\${PATH}\"
  eval \"\$(rbenv init -)\"
fi

To add your own list of default plugins, edit

$RBENV_INSTALLER_DEFLT_PLUGNS

(Create it if it doesn't exist) and place your list of
plugins, separated by whitespace, then run this script
with the same call from this time.
"
fi
